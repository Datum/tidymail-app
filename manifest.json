{
    "manifest_version": 2,
    "name": "Datum UnSubscriber Extension",
    "short_name": "DtUnSubber",
    "version": "0.1",
    "author": "Datum",
    "description": "",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "dist/datum-unsubscriber-extension/index.html"
    },
    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "dist/extension.js",
        "assets/css/*",
        "assets/js/*",
        "assets/fonts/*"
    ],
    "permissions": [
        "https://*/*",
        "identity",
        "storage",
        "notifications"
    ]
}
