{
    "manifest_version": 2,
    "name": "Datum Unsubscriber",
    "short_name": "DtUnSubber",
    "version": "1.0.0",
    "description": "Helper extension to unsubscribe newsletters or monetize from it",
    "permissions": [
        "tabs",
        "identity",
        "storage"
    ],
    "key": "ebbenmdmommecknhkjmocigdpgboinhl",
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Datum Unsubscriber"
    },
    "content_scripts": [
        {
            "js": [
                "contentPage.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "oauth2": {
        "client_id": "187423944392-87r99e4mn2bdhr1q7e3gjg2v5hohp08a.apps.googleusercontent.com",
        "scopes": [
          "https://www.googleapis.com/auth/gmail.readonly",
          "https://www.googleapis.com/auth/gmail.modify"
        ]
      },
    "icons": {
        "16": "assets/icon.png"
    },
    "background": {
        "scripts": [
            "backgroundPage.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}